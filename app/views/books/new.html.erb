<h1 class="text-3xl font-bold mb-4">Add a New Book</h1>

<%= form_with model: @book, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: "block font-bold" %>
    <%= form.text_field :title, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :author, class: "block font-bold" %>
    <%= form.text_field :author, class: "w-full p-2 border rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :isbn, class: "block font-bold" %>
    <%= form.text_field :isbn, class: "w-full p-2 border rounded" %>
  </div>

  <%= form.submit "Add Book", class: "bg-green-500 text-white px-4 py-2 rounded" %>
<% end %>

<%= link_to "Back to Books", books_path, class: "text-blue-500 underline mt-4 inline-block" %>
