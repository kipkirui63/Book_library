<h1 class="text-3xl font-bold mb-4">Book Library</h1>
<%= link_to "Add New Book", new_book_path, class: "bg-green-500 text-white px-4 py-2 rounded" %>

<table class="w-full mt-4 border-collapse border border-gray-300">
  <thead>
    <tr class="bg-gray-200">
      <th class="border p-2">Title</th>
      <th class="border p-2">Author</th>
      <th class="border p-2">ISBN</th>
      <th class="border p-2">Status</th>
      <th class="border p-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr class="border">
        <td class="p-2"><%= link_to book.title, book_path(book) %></td>
        <td class="p-2"><%= book.author %></td>
        <td class="p-2"><%= book.isbn %></td>
        <td class="p-2">
          <% if book.available? %>
            <span class="text-green-500">Available</span>
          <% else %>
            <span class="text-red-500">Borrowed</span>
          <% end %>
        </td>
        <td class="p-2">
          <% if book.available? %>
            <%= button_to "Borrow", borrow_book_path(book), method: :post, class: "bg-blue-500 text-white px-3 py-1 rounded" %>
          <% else %>
            <%= button_to "Return", return_book_path(book), method: :post, class: "bg-yellow-500 text-white px-3 py-1 rounded" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
