<h1 class="text-3xl font-bold"><%= @book.title %></h1>
<p><strong>Author:</strong> <%= @book.author %></p>
<p><strong>ISBN:</strong> <%= @book.isbn %></p>

<% if @book.available? %>
  <%= button_to "Borrow", borrow_book_path(@book), method: :post, class: "bg-blue-500 text-white px-4 py-2 rounded" %>
<% else %>
  <p class="text-red-500 font-semibold">This book is currently borrowed.</p>
<% end %>

<%= link_to "Back to Books", books_path, class: "text-blue-500 underline mt-4 inline-block" %>
