<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-md rounded-lg p-8 max-w-md w-full">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Welcome Back</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-semibold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex justify-between items-center mb-6">
        <%= f.submit "Login", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg w-full transition duration-300" %>
      </div>

      <div class="text-center text-gray-600">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-600 hover:underline" %> |
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
